#!/bin/bash

JOB=gogs
RUN_DIR=/var/vcap/sys/run/$JOB
LOG_DIR=/var/vcap/sys/log/$JOB
PIDFILE=$RUN_DIR/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    /var/vcap/packages/$JOB/$JOB > /dev/null &
    echo $! > $PIDFILE
    ;;

  stop)
    kill -9 'cat $PIDFILE'
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {star|stop}"
    ;;

esac
